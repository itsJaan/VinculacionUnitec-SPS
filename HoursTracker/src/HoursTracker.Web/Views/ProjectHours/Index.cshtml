
@{
    ViewData["Title"] = "Horas de Vinculacion";
}

@section Scripts {
    <script>
        $(function () {
          const table = $("#projecthoursTable").DataTable({
            language,
            dom: "Bfrtip",
            ajax: {
                url: "@Url.Action("All", "Projecthours")",
                dataSrc: ""
            },
            buttons: [
              {
                text: "Agregar",
                className: "btn btn-primary waves-effect",
                action: function () {
                  window.location.href = "@Url.Action("Create", "Projecthours")";
                },
              },
            ],
              columns: [
                  { data: "account" },
                  { data: "studentFirstName" },
                  { data: "studentLastName" },
                  { data: "seccionCode" },
                  { data: "seccionName" },
                  { data: "projectName" },
                  { data: "hours" },
                  { data: "tableState" },

              { data: null },
            ],
            columnDefs: [
              {
                targets: [-1],
                width: 10,
                render: function (data, type, row) {
                  const {id} = row;
                  return (
                    `
                    <div class="text-center">
                        <button type="button" class="btn bg-light-blue waves-effect edit-action" data-id=${id}>
                            <i class="material-icons">create</i>
                        </button>
                        <button type="button" class="btn bg-red waves-effect delete-action" data-id=${id}>
                            <i class="material-icons">delete</i>
                        </button>
                        <button type="button" class="btn bg-green waves-effect approve-action" data-id=${id}>
                            <i class="fas fa-check"></i>
                        </button>

                    </div>`
                  );
                },
              },
            ],
          });

          $(document).on('click', '.edit-action', function () {

              window.location.href = `@Url.Action("Edit", "Projecthours")/${this.dataset.id}`;
          });

          $(document).on('click', '.delete-action', function () {
              bootbox.confirm({
                  message: "¿Está seguro que desea eliminar el registro?",
                      buttons: {
                          confirm: {
                              label: 'Si',
                              className: 'btn-default'
                          },
                          cancel: {
                              label: 'No',
                              className: 'btn-primary'
                          }
                      },
                      callback: result => {
                          if (!result) return;

                          $.ajax({
                              url: `@Url.Action("Delete", "Projecthours")/${this.dataset.id}`,
                              type: 'DELETE',
                              success: function() {
                                  table.ajax.reload();
                              }
                          });
                      }
                });
          });
        });

        $('#projecthoursTable thead tr').clone(true).appendTo('#projecthoursTable thead');
        $('#projecthoursTable thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();
            $(this).html('<input type="text" placeholder="Buscar ' + title + '" />');

            $('input', this).on('keyup change', function () {
                if (table.column(i).search() !== this.value) {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });


    </script>
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <span>Horas de Vinculacion</span>
                </h2>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-4">
                        <p>
                            <b>Filtros</b>
                        </p>
                        <select class="form-control show-tick">
                            <option>Todas</option>
                            <option>Nombre del Estudiante</option>
                            <option>Nombre de Seccion</option>
                            <option>Codigo de Seccion</option>
                            <option>Nombre del Proyecto</option>
                            <option>Estado del Registro</option>
                        </select>
                    </div>
                </div>
                <div>
                    <input type="checkbox" id="md_checkbox_30" class="filled-in chk-col-green" />
                    <label for="md_checkbox_30">Aprovadas</label>
                </div>
                <br />
                <div class="table-responsive">
                    <table id="projecthoursTable" class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr>
                                <th>Numero de Cuenta</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Codigo de Seccion</th>
                                <th>Nombre de Seccion</th>
                                <th>Nombre del Proyecto</th>
                                <th>Horas</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

