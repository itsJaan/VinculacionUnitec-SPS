@{
    ViewData["Title"] = "Nuevo estudiante";
}

@section Scripts { 

    <script>
    $(function () {
        $.get('@Url.Action("All", "Careers")', function (data) {
            for (const { id, name } of data) {
                $('#selectCareers').append('<option value=' + id + '>' + name + '</option>').selectpicker('refresh');
            }
        });

        $.get('@Url.Action("All", "Campuses")', function (data) {
            for (const { id, name } of data) {
                $('#selectCampus').append('<option value=' + id + '>' + name + '</option>').selectpicker('refresh');
            }
        });

        $(".form-horizontal").submit(function (event){
            event.preventDefault();

            $(this).ajaxSubmit({
                url: '@Url.Action("Create", "Students")',
                type: 'post',
                resetForm: true,
                success: () => {
                    $(this).prepend(`
                        <div id="alert" class="alert bg-green alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                            ¡El estudiante ha si creado exitosamente!
                        </div>
                    `);
                }
            })

        })

    });
    </script>

}

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        Agregar estudiante
                    </h2>
                </div>
                <div class="body form-center">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="account">Numero de cuenta</label>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="account" name="account" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="firstName">Primer nombre</label>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="firstName" name="firstName" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="secondName">Segundo nombre</label>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="secondName" name="secondName" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="firstSurname">Primer apellido</label>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="firstSurname" name="firstSurname" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="secondSurname">Segundo apellido</label>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="secondSurname" name="secondSurname" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="ClassCode">Campus</label>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <select id="selectCampus" name="campus" class="form-control show-tick">
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="ClassCode">Carrera</label>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <select id="selectCareers" name="careers" class="form-control show-tick" multiple>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="settlement">Finiquito</label>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input type="checkbox" class="filled-in" value=true id="settlement" name="settlement">
                                        <label for="settlement" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                <button id="saveButton" type="submit" class="btn btn-primary m-t-15 waves-effect">Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>